@{
}
<h1>Mantenimiento de Equipos</h1>
<br />
<form>
    @*Inicio del Formulario*@

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            <label>Nombre</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("nombre","", new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblDescripcion", "Descripcion")
        </div>
        <div class="col-sm-4">
            @Html.TextArea("Descripcion", "", new {@class="form-control", @placeHolder="Ingrese la descripción"})
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("marca_id", ViewData["listadoDeMarcas"] as SelectList, "Seleccione una marca", new{@class="form-control"})
        </div>
        <div class="col-sm-2"></div>
        
    </div>
    <div class="col-sm-4">
        <input type="submit" class="btn btn-primary" value="Guardar"
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Equipo</th>
                <th>Descripcio</th>
                <th>Marca</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoEquipo"])
            {
                <tr>
                    <td>@equipo.nombre</td>
                    <td>@equipo.descripcion</td>
                    <td>@equipo.marca_nombre</td>
                </tr>
            }
        </tbody>
    </table>
    @*Fin del Formulario*@
</form>